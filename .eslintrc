{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true
        },
        "sourceType": "module"
    },
    "node": true,
    "plugins": [
        "react"
    ],
    "globals": {
        "GDATA": true,
        "APP": true,
        "require": false
    },
    "parser": "babel-eslint",
    "rules": {
        "indent": ["error", 4],
        "no-extra-semi":1,
        "semi": ["error", "always"],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "no-unused-vars":0
    }
}
